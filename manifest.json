{

  "description": "Adds a browser action icon to the toolbar to add something to Things 4 using the Send to Things 4 email feature.",
  "manifest_version": 2,
  "name": "Send To Things",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "things.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "things.png",
    "default_title": "Send to Things",
    "default_popup": "popup/send_email.html"
  },

  "web_accessible_resources": [
    "beasts/*.jpg"
  ]

}
